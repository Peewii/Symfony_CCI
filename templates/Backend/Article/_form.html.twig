{{ form_start(form, {'attr': {'class': 'form card p-3 mt-4 w-75 mx-auto'}})
}}

{{ form_row(form.title) }}

<div class="row">
    <div class="col-md-6">
        {{ form_row(form.metaTitle)}}
    </div>

     <div class="col-md-6">
        {{ form_row(form.metaDescription)}}
    </div>
</div>

{{ form_row(form.image) }}
{{ form_row(form.content) }}
{{ form_row(form.enable) }}

<div class="text-center">
    <button class="btn btn-primary" type:"submit">{{ buttonLabel|default('save') }}</button>
</div>
{{ form_end(form) }}
