{% extends 'base.html.twig' %}

{% block title %}
	Admin Articles
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="conatainer mt-4">
		<h1 class="text-center">Administrations des articles</h1>
		<a href="{{ path('admin.articles.create') }}" class="btn btn-primary mt-4">Cr√©er un article</a>
		<diw class="row mt-4">
			{% for article in articles %}
				<div class="col-md-4">
					<div class="card">
						<h2 class="card-header">{{ article.title | sanitize_html }}</h2>
						<div class="card-body">
							<p class="card-text">{{ article.content | sanitize_html }}</p>
							<div class="d-flex justify-content-between">
								<a href="{{ path('admin.articles.edit', {'id': article.id}) }}" class="btn btn-warning">Modifier</a>
							</div>
						</div>
					</div>
				</div>

			{% endfor %}
		</diw>
	</section>
{% endblock %}
